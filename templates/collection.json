{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "custom_css": [
        "h1 {text-align: center;}",
        "div.collection-hero__description {width: fit-content; margin: 0 auto 10px;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "inverse"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        "select[name=\"sort_by\"] option {background-color: black;}"
      ],
      "settings": {
        "color_scheme": "accent-1",
        "products_per_page": 16,
        "columns_desktop": 4,
        "image_ratio": "portrait",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "enable_quick_add": false,
        "enable_filtering": true,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
