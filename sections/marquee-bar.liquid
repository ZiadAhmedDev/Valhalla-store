<style>
       .custom-marquee {
        position: relative;
        width: 100vw;
        max-width: 100%;
        height: 43px;
        overflow-x: hidden;
        color: {{section.settings.colorText}};
      }

      .custom-marquee a {
        color: {{section.settings.colorText}};
      }

      .custom-marquee .track {
        position: absolute;
        bottom: 6px;
        white-space: nowrap;
        will-change: transform;
        animation: marquee 30s linear infinite alternate;
        backface-visibility: hidden;

      }

      .custom-marquee:hover .track {
        animation-play-state: paused;
      }

      .custom-marquee .content {
        margin-left: 25px;
      }

   @keyframes marquee {
    0% {
      transform: translateX({%- if section.settings.textDirection == 'left' -%}100%{%- else -%}-100%{%- endif -%});
    }
    100% {
      transform: translateX({%- if section.settings.textDirection == 'left' -%}-100%{%- else -%}100%{%- endif -%});
    }
  }
</style>

<div class="custom-marquee color-{{ section.settings.color_scheme }} " role="region" {{ block.shopify_attributes }}>
  {%- if section.settings.text != blank -%}
    {%- if section.settings.link != blank -%}
      <a href="{{ section.settings.link }}" class="">
    {%- endif -%}
    <div class="track">
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_2 | escape }}</span>
      <span class="content marquee-text">{{ section.settings.text_3 | escape }}</span>
      {%- if section.settings.link != blank -%}
        {% render 'icon-arrow' %}
      {%- endif -%}
    </div>
    {%- if section.settings.link != blank -%}
      </a>
    {%- endif -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Marquee Announcement",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "default": "Welcome to our store",
      "label": "Add first text to display"
    },
    {
      "type": "text",
      "id": "text_2",
      "default": "Welcome to our store",
      "label": "Add second text to display"
    },
    {
      "type": "text",
      "id": "text_3",
      "default": "Welcome to our store",
      "label": "Add third text to display"
    },
    {
      "type": "color",
      "id": "colorBackground",
      "label": "Background color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "colorText",
      "label": "Text color",
      "default": "#fff"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "select",
      "id": "textDirection",
      "label": "Text Direction",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "marquee announcement"
    }
  ]
}
{% endschema %}
