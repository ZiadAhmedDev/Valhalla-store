<div id="wishlist-container">
  <span>a7a</span>
</div>

<script>
  // Retrieve the wishlist from local storage
  const wishlist = localStorage.getItem('wishlist');

  if (wishlist) {
    // Convert the wishlist from a string to an array
    const wishlistArray = JSON.parse(wishlist);

    // Get the container element for the wishlist
    const wishlistContainer = document.getElementById('wishlist-container');

    // Generate the HTML for each product in the wishlist
    wishlistArray.forEach((productId) => {
      const productHtml = `<div class="product-item">${productId}</div>`;
      wishlistContainer.innerHTML += productHtml;
    });
  }
</script>

