<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css">
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>

<style>
  /* Style for the widget container */
  .widget-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
  }

  /* Style for the map container (2/3 width) */
  .map-container {
    width: 66.66%; /* 2/3 of the width */
    background-color: #000; /* Dark background color */
  }

  /* Style for the info container (1/3 width) */
  .info-container {
    width: 33.33%; /* 1/3 of the width */
    background-color: #000; /* Dark background color */
    color: #fff; /* White text color */
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }

  /* Style for the info text */
  .info-text {
    margin-bottom: 20px;
  }

  /* Media query for responsiveness */
  @media screen and (max-width: 768px) {
    /* On smaller screens, make the map container full-width */
    .map-container {
      width: 100%;
    }

    /* On smaller screens, make the info container full-width */
    .info-container {
      width: 100%;
    }
  }

  h3,
  span,
  p {
    color: white;
  }
</style>

<div id="map" style="width: 100%; height: 300px;"></div>

<script>
  // Initialize the map
  var map = L.map('map').setView([30, 31], 13);

  // Add a tile layer (you can choose a different provider)
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 10,
  }).addTo(map);

  // Add a marker to the map
  L.marker([30, 31]).addTo(map);
  // Customize the marker
  var marker = L.marker([30, 31]).addTo(map);

  // Add a tooltip to the marker
  marker.bindTooltip('We are here', { permanent: false }).openTooltip();

  // Add a popup to the marker
</script>
